<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="point_of_sale.video_icon" t-inherit="point_of_sale.ProductCard" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('product-img')]" position="before">
            <div class="video_icon_tag" t-on-click="videoPreview">
                <i class="fa fa-video-camera"/>
            </div>
        </xpath>
    </t>
    <t t-name="pos_product_video.ProductsWidget" t-inherit="point_of_sale.ProductsWidget" t-inherit-mode="extension" owl="1">
       <xpath expr="//ProductCard" position="attributes">
           <attribute name="video_url">product.video_url</attribute>
       </xpath>
   </t>
</templates>
