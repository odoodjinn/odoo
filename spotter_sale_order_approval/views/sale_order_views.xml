<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_inherit_view_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="replace">
                <field name="state" widget="statusbar"
                       statusbar_visible="draft,sent,sale"/>
            </xpath>
            <xpath expr="//button[@name='action_quotation_send']" position="before">
                <field name="current_user"/>
                <field name="primary_user"/>
                <button name="action_approve" string="Approve" class="oe_highlight" type="object"
                        invisible="uid != 'primary_user'"/>
                <button name="action_second_approve" string="Second Approve" class="oe_highlight" type="object"
                        groups="sales_team.group_sale_manager" invisible="state != 'secondary_approval'"/>
            </xpath>
        </field>
    </record>
</odoo>
